<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChatClientController">
    <top>
        <VBox>
            <children>
                <!-- Server connection section -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <children>
                        <Label fx:id="serverLabel" text="Server: localhost:12345" />
                        <Separator />
                        <Label text="Username:" />
                        <TextField fx:id="usernameField" prefWidth="150.0" />
                        <Button fx:id="connectButton" onAction="#handleConnect" text="Connect" />
                    </children>
                </HBox>

                <!-- Chat title and back button section -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                    <children>
                        <Label fx:id="chatTitleLabel" text="Public Chat" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                        <Button fx:id="backToPublicButton" onAction="#handleBackToPublic" text="Back to Public" visible="false" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <HBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <!-- Main chat area -->
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <ScrollPane fitToHeight="true" fitToWidth="true" vbarPolicy="ALWAYS" VBox.vgrow="ALWAYS">
                            <content>
                                <TextArea fx:id="chatArea" editable="false" wrapText="true" />
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>

                <!-- User list sidebar -->
                <VBox prefWidth="200.0" minWidth="200.0" maxWidth="200.0">
                    <children>
                        <Label text="Online Users" style="-fx-font-weight: bold;" />
                        <ListView fx:id="userListView" VBox.vgrow="ALWAYS">
                            <tooltip>
                                <Tooltip text="Double-click to start private chat" />
                            </tooltip>
                        </ListView>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <TextField fx:id="messageField" prefWidth="400.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton" onAction="#handleSend" text="Send" />
            </children>
        </HBox>
    </bottom>
</BorderPane>