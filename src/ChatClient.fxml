<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChatClientController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label fx:id="serverLabel" text="Server: localhost:12345" />
                <Separator />
                <Label text="Username:" />
                <TextField fx:id="usernameField" prefWidth="150.0" />
                <Button fx:id="connectButton" onAction="#handleConnect" text="Connect" />
            </children>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" vbarPolicy="ALWAYS">
            <content>
                <TextArea fx:id="chatArea" editable="false" wrapText="true" />
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <TextField fx:id="messageField" prefWidth="400.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton" onAction="#handleSend" text="Send" />
            </children>
        </HBox>
    </bottom>
</BorderPane>